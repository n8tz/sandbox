{
  "default": {
    "rootFolder": "App"
  },
  "dev": {
    "rootFolder": "App",
    "libsPath": "./layers",
    "commands": {
      "server": {
        "watch": "dist/api/App.server.js",
        "run": "node --inspect=[::]:9229 ./dist/api/App.server.js -p 9701",
        "forever": true
      },
      "api": {
        "clearBefore": "dist/api",
        "run": "wpi :api -w",
        "vars": {
          "DefinePluginCfg": {
            "__IS_DEV__": true,
            "__IS_SERVER__": true
          },
          "production": false
        }
      },
      "www": {
        "clearBefore": "dist/www",
        "run": "wpi-dev-server :www --hot --host 0.0.0.0",
        "vars": {
          "DefinePluginCfg": {
            "__IS_DEV__": true,
            "__IS_SERVER__": false
          },
          "extractCss": false,
          "production": false
        }
      }
    },
    "extend": [
      "wi-layer-dev-tools"
    ]
  },
  "prod": {
    "rootFolder": "App",
    "libsPath": "./layers",
    "commands": {
      "www": {
        "clearBefore": "dist/www",
        "run": "wpi :www"
      },
      "api": {
        "wait": "www",
        "clearBefore": "dist/api",
        "run": "wpi :api"
      },
      "server": {
        "wait": "api",
        "run": "node ./dist/api/App.server.js -p 8080",
        "forever": true
      }
    },
    "extend": [
      "wi-layer-dev-tools"
    ]
  },
  "www": {
    "basedOn": "defaultBrowser",
    "rootFolder": "App",
    "libsPath": "./layers",
    "vars": {
      "targetDir": "dist/www",
      "production": true,
      "DefinePluginCfg": {
        "__IS_DEV__": false,
        "__IS_SERVER__": false
      },
      "webpackPatch": {
      }
    },
    "extend": [
      "widget-management",
      "wi-layer-redux-thunk",
      "wi-layer-react-express"
    ]
  },
  "api": {
    "basedOn": "defaultServer",
    "rootFolder": "App",
    "libsPath": "./layers",
    "vars": {
      "targetDir": "dist/api",
      "externals": true,
      "DefinePluginCfg": {
        "__IS_DEV__": false,
        "__IS_SERVER__": true
      }
    },
    "extend": [
      "widget-management",
      "wi-layer-redux-thunk",
      "wi-layer-react-express"
    ]
  }
}